%h1 Listing pages
%table
  %thead
    %tr
      %th Title
      %th Body
      %th Page type
      %th
      %th
      %th

  %tbody
    - @pages.each do |page|
      %tr
        %td= page.title
        %td= page.body.html_safe
        %td= page.parent_page.title if page.parent_page
        %td= link_to 'Show', page
        %td= link_to 'Edit', edit_page_path(page)
        %td= link_to 'Destroy', page, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Page', new_page_path
