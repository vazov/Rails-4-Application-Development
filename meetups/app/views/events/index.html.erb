<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Location</th>
      <th>Agenda</th>
      <th>Address</th>
      <th>Organizer</th>
       <th>Tags</th>
      <th colspan="3"></th>

    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= l event.start_date %></td>
        <td><%= l event.end_date %></td>
        <td><%= event.location %></td>
        <td><%= event.agenda %></td>
        <td><%= event.address %></td>
        <td><%= event.organizer_id %></td>
        <td><%= event.all_tags.split(", ").map { |t| link_to t, tag_path(t)}.join(",").html_safe %></td>
        <td><%= link_to 'Show', event, :class=>"btn btn-info btn-small" %></td>
        <td><%= link_to 'Edit', edit_event_path(event), :class=>"btn btn-primary btn-small" %></td>
        <td><%= link_to 'Destroy', event, method: :delete, :class=>"btn btn-danger btn-small", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="col-lg-4">
  <%= render "tag_cloud"%>
  <br>
</div>


<%= link_to 'Create an Event', new_event_path, :class=>"btn btn-default btn-primary" %>
