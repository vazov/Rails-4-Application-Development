<script type="text/javascript">
var $handler = $('#tiles td');
$handler.wookmark({
  autoResize: true,
  container: $('#main'),
  offset: 5,
  outerOffset: 10,
  itemWidth: 210
});

$handler.click(function(){
var newHeight = $('img', this).height() + Math.round(Math.
random() * 300 + 30);
$(this).css('height', newHeight+'px');
// Update the layout.
$handler.wookmark();
});
</script>

<p id="notice"><%= notice %></p>

<h1>Listing Pins</h1>
<%= paginate @pins %>
<table id="posts">
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Board</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="tiles" class="page">

    <% @pins.each do |pin| %>
      <tr class="post">
        <td><%= pin.name %></td>
        <td><%= pin.image %></td>
        <td><%= pin.board_id %></td>
        <td> <%=link_to(image_tag(pin.image.thumb.url), pin) %> </td>
          
        
        <td><%= link_to 'Show', pin %></td>
        <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
        <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @pins %>
